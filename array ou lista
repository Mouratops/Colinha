// Arrays ou Lista
//Decrlaração de arrays
//             0        1         2         3
let cores = ['Azul','Amarelo','Vermelho','Verde']
console.log(cores)

//Acessar item da lista 
console.log(cores[2])

//Propriedade length
console.log(cores.length) //4
let ultimoElemento = cores[cores.length -1] //3
console.log(ultimoElemento)

//adicionar elemento
const notas = [10,6,8]
//push - adicionar elementos no final do array
notas.push(9)
console.log(notas)

//unshift - adiciona elemento no inicio do array
notas.unshift(5)
console.log(notas)

//deletando itens do array
//push - deleta o utimo digito do array
notas.pop()
console.log(notas)

// shift - deleta o primeiro elemento do array
notas.shift()
console.log(notas)
